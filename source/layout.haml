        = yield_content :head
  %body{:class => page_classes}
    .container
      .row-fluid
        .span3
        .span9
          #main{:role => "main"}
            .hero-unit
              %h1
                %i= link_to "Capistrano", "/"
              %h2 A Software Deployment Tool
            = yield
